{
  "resolution": {
    "function space": "StructuredColumns",
    "grid": {
      "type": "regular_lonlat",
      "N": "10"
    },
    "groups": [
      {
        "variables": ["temperature"],
        "levels": "3"
      }
    ],
    "halo": "1"
  },
  "model": {},
  "cost_function": {
    "cost_type": "3D-Var",
    "window_begin": "2010-01-01T12:00:00Z",
    "window_length": "PT0H",
    "variables": ["temperature"],
    "Jb": {
      "Background": {
        "state": [
          {
            "date": "2010-01-01T12:00:00Z",
            "variables": ["temperature"],
            "filepath": "testdata/evil_bkg_000001"
          }
        ]
      },
      "Covariance": {
        "covariance": "SABER",
        "ensemble": [
          {
            "variables": ["temperature"],
            "members": "50",
            "state from template": {
              "template": {
                "date": "2010-01-01T12:00:00Z",
                "filepath": "testdata/evil_ens_%member%",
                "state variables": ["temperature"]
              },
              "pattern": "%member%",
              "zero padding": "6"
            }
          }
        ],
        "saber central block": {
          "saber block name": "Ensemble",
          "inflation value": 1.0,
          "localization": {
            "saber central block": {
              "saber block name": "BUMP_NICAS",
              "read": {
                "drivers": {
                  "multivariate strategy": "univariate",
                  "read local nicas": "true"
                },
                "io": {
                   "overriding nicas file": "testdata/evil_nicas"
                }
              }
            }
          }
        }
      }
    },
    "Jo": {
      "ObsTypes": [
        {
          "ObsType": "default",
          "ObsData": {
            "ObsDataInScreened": {
              "filepath": "testdata/evil_obs"
            },
            "ObsDataOutScreened": {
              "filepath": "testdata/evil_obs_dual_3dvar"
            },
            "obsvalue": "ObsValue.000000"
          },
          "Covariance": {
            "ObsErrorCovariance": {
              "covariance": "diagonal",
              "obserror": "ObsError"
            }
          },
          "variables": ["temperature"]
        }
      ]
    }
  },
  "minimizer": {
    "algorithm": "RPLanczosEVIL",
    "ritz tolerance": "1.0e-2",
    "eigenvalues": "testdata/evil_dual_3dvar.eigenvalues.txt",
    "ritz vectors": {
      "mpi pattern": "%mpi%",
      "obsvalue": "ritz.%pattern%.%iteration%_%mpi%"
    }
  },
  "output": {
    "filepath": "testdata/evil_dual_3dvar"
  },
  "variational": {
    "iteration": [
      {
        "resolution": {
          "function space": "StructuredColumns",
          "grid": {
            "type": "regular_lonlat",
            "N": "10"
          },
          "groups": [
            {
              "variables": ["temperature"],
              "levels": "3"
            }
          ],
          "halo": "1"
        },
        "timeslot": "PT0H",                
        "linearmodel": {
          "version": "default",
          "tstep": "PT0H",
          "trajectory": {
            "forcing": {
              "variables": ["temperature"]
            }
          }
        },
        "ninner": "30",
        "gradient_norm_reduction": "1e-10",
        "test": "on",
        "diagnostics": {
          "departures": {
            "obsvalue": "ombg"
          }
        }
      }
    ]
  },
  "final": {
    "diagnostics": {
      "departures": {
        "obsvalue": "oman"
      }
    }
  }
}
